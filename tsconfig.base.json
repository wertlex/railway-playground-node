{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "typeRoots": [
      "./src/typings",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/types/*"
      ]
    }
  }
}
